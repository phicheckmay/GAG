--========================
-- Render + Auto refresh
--========================
local lastCounts = {}
local lastTotal = 0
local accumulator = 0

local function nowTimeString()
    local t = os.date("*t")
    return string.format("%02d:%02d:%02d", t.hour, t.min, t.sec)
end

local function render(filterText)
    filterText = (filterText or ""):lower()
    clearRows()

    local list = sortedList(lastCounts)
    for _, it in ipairs(list) do
        if filterText == "" or it.name:lower():find(filterText, 1, true) then
            addRow(it.name, it.count)
        end
    end
end

local function setStats(uniqueCount)
    stats.Text = string.format("Total: %d | Unique: %d | Last: %s", lastTotal, uniqueCount, nowTimeString())
end

local function doRefresh()
    local counts, total = scanCounts()
    lastCounts = counts
    lastTotal = total

    local unique = 0
    for _ in pairs(counts) do unique += 1 end
    setStats(unique)
    render(search.Text)
end

refreshBtn.MouseButton1Click:Connect(function() pcall(doRefresh) end)

pauseBtn.MouseButton1Click:Connect(function()
    autoOn = not autoOn
    pauseBtn.Text = autoOn and "Auto: ON" or "Auto: OFF"
    pauseBtn.BackgroundColor3 = autoOn and Color3.fromRGB(42, 42, 58) or Color3.fromRGB(140, 60, 60)
end)

intervalBox.FocusLost:Connect(function()
    local n = tonumber(intervalBox.Text)
    if not n then
        intervalBox.Text = tostring(refreshInterval)
        return
    end
    if n < 1 then n = 1 end
    if n > 30 then n = 30 end
    refreshInterval = n
    intervalBox.Text = tostring(refreshInterval)
end)

search:GetPropertyChangedSignal("Text"):Connect(function()
    render(search.Text)
end)

--========================
-- Auto Trade loop (GiftDelay applied)
--========================
task.spawn(function()
    while task.wait(1) do
        pcall(function()
            if table.find(mainAccounts, LP.Name) then
                tradeStatus.Text = "Trade: Main account (waiting)"
                return
            end

            if havepet() then
                local mainPlr = findFirstMainAccount()
                if mainPlr and mainPlr.Character and mainPlr.Character:FindFirstChild("HumanoidRootPart") then
                    tradeStatus.Text = "Trade: Found main -> teleport + send items"

                    if LP.Character and LP.Character:FindFirstChild("HumanoidRootPart") then
                        LP.Character.HumanoidRootPart.CFrame = mainPlr.Character.HumanoidRootPart.CFrame
                    end
                    if tpDelay > 0 then task.wait(tpDelay) end

                    local uuids = get_secret_uuids()
                    tradeStatus.Text = ("Trade: Sending %d item(s) | Delay %ss"):format(#uuids, tostring(giftDelay))

                    for i, uuid in ipairs(uuids) do
                        tradeStatus.Text = ("Trade: Sending %d/%d | Next in %ss"):format(i, #uuids, tostring(giftDelay))
                        invokeInitiateTrade(mainPlr.UserId, uuid)
                        task.wait(giftDelay) -- ‚úÖ here is the 5s delay (config)
                    end

                    tradeStatus.Text = "Trade: Done"
                else
                    tradeStatus.Text = "Trade: Main not found"
                end
            else
                tradeStatus.Text = "Trade: No target pets -> shutdown"
                pcall(function() writefile(LP.Name .. "-Clone.txt", "Done") end)
                game:Shutdown()
                task.wait(60)
            end
        end)
    end
end)

--========================
-- UI Auto refresh heartbeat
--========================
RunService.Heartbeat:Connect(function(dt)
    if not autoOn then return end
    accumulator += dt
    if accumulator >= refreshInterval then
        accumulator = 0
        pcall(doRefresh)
    end
end)

pcall(doRefresh)
tradeStatus.Text = ("Trade: Ready | GiftDelay=%ss"):format(tostring(giftDelay))
