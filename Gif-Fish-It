local CloneLog = nil

local function createCloneLogPanel()
    local maxLines = tonumber(Config["CloneLog_MaxLines"]) or 30
    if maxLines < 5 then maxLines = 5 end
    if maxLines > 120 then maxLines = 120 end
    local pos = tostring(Config["CloneLog_Position"] or "TopRight")

    local gui = Instance.new("ScreenGui")
    gui.Name = "CLONE_LOG_PANEL"
    gui.ResetOnSpawn = false
    gui.IgnoreGuiInset = true
    gui.Parent = LP:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Parent = gui
    frame.BackgroundColor3 = Color3.fromRGB(16, 16, 20)
    frame.BackgroundTransparency = 0.25
    frame.BorderSizePixel = 0
    frame.Size = UDim2.fromOffset(560, 230)
    frame.ZIndex = 999

    local cr = Instance.new("UICorner")
    cr.CornerRadius = UDim.new(0, 14)
    cr.Parent = frame

    local st = Instance.new("UIStroke")
    st.Color = Color3.fromRGB(90, 90, 120)
    st.Transparency = 0.55
    st.Thickness = 1
    st.Parent = frame

    local pad = Instance.new("UIPadding")
    pad.PaddingLeft = UDim.new(0, 12)
    pad.PaddingRight = UDim.new(0, 12)
    pad.PaddingTop = UDim.new(0, 10)
    pad.PaddingBottom = UDim.new(0, 10)
    pad.Parent = frame

    local header = Instance.new("TextLabel")
    header.Parent = frame
    header.BackgroundTransparency = 1
    header.Size = UDim2.new(1, 0, 0, 22)
    header.Font = Enum.Font.GothamBold
    header.TextSize = 14
    header.TextXAlignment = Enum.TextXAlignment.Left
    header.TextColor3 = Color3.fromRGB(255, 255, 255)
    header.Text = ("CLONE LOG ‚Ä¢ %s"):format(LP.Name)
    header.ZIndex = 1000

    local sub = Instance.new("TextLabel")
    sub.Parent = frame
    sub.BackgroundTransparency = 1
    sub.Position = UDim2.fromOffset(0, 22)
    sub.Size = UDim2.new(1, 0, 0, 18)
    sub.Font = Enum.Font.Gotham
    sub.TextSize = 12
    sub.TextXAlignment = Enum.TextXAlignment.Left
    sub.TextColor3 = Color3.fromRGB(200, 200, 220)
    sub.Text = ("GiftDelay=%ss | TeleportDelay=%ss"):format(tostring(giftDelay), tostring(tpDelay))
    sub.ZIndex = 1000

    local list = Instance.new("ScrollingFrame")
    list.Parent = frame
    list.BackgroundTransparency = 1
    list.BorderSizePixel = 0
    list.Position = UDim2.fromOffset(0, 46)
    list.Size = UDim2.new(1, 0, 1, -46)
    list.ScrollBarThickness = 4
    list.AutomaticCanvasSize = Enum.AutomaticSize.Y
    list.CanvasSize = UDim2.new(0,0,0,0)
    list.ZIndex = 1000

    local layout = Instance.new("UIListLayout")
    layout.Parent = list
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    layout.Padding = UDim.new(0, 6)

    if pos == "TopLeft" then
        frame.AnchorPoint = Vector2.new(0, 0)
        frame.Position = UDim2.fromOffset(10, 10)
    elseif pos == "BottomRight" then
        frame.AnchorPoint = Vector2.new(1, 1)
        frame.Position = UDim2.new(1, -10, 1, -10)
    elseif pos == "BottomLeft" then
        frame.AnchorPoint = Vector2.new(0, 1)
        frame.Position = UDim2.new(0, 10, 1, -10)
    else
        frame.AnchorPoint = Vector2.new(1, 0)
        frame.Position = UDim2.new(1, -10, 0, 10)
    end

    local lines = {}
    local colors = {
        INFO = Color3.fromRGB(200, 230, 255),
        OK   = Color3.fromRGB(170, 255, 180),
        WARN = Color3.fromRGB(255, 220, 120),
        ERR  = Color3.fromRGB(255, 140, 140),
    }

    local function addLine(kind, msg)
        local label = Instance.new("TextLabel")
        label.BackgroundTransparency = 1
        label.Size = UDim2.new(1, 0, 0, 18)
        label.Font = Enum.Font.Gotham
        label.TextSize = 12
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.TextWrapped = true
        label.AutomaticSize = Enum.AutomaticSize.Y
        label.TextColor3 = colors[kind] or colors.INFO
        label.Text = ("[%s] [%s] %s"):format(nowTS(), LP.Name, msg)
        label.Parent = list

        table.insert(lines, label)
        if #lines > maxLines then
            local old = table.remove(lines, 1)
            if old then old:Destroy() end
        end

        task.defer(function()
            list.CanvasPosition = Vector2.new(0, math.max(0, list.AbsoluteCanvasSize.Y - list.AbsoluteSize.Y))
        end)
    end

    return { add = addLine }
end

local function LOG(kind, msg)
    local line = ("[%s] [%s] %s"):format(nowTS(), LP.Name, msg)
    if kind == "ERR" or kind == "WARN" then
        warn("[AUTO]["..tostring(kind).."]", line)
    else
        print("[AUTO]["..tostring(kind).."]", line)
    end
    if CloneLog then CloneLog.add(kind, msg) end
end

if not IS_MAIN then
    CloneLog = createCloneLogPanel()
    LOG("OK", "Clone log panel ready.")
end

