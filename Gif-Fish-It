    local bar = Instance.new("Frame")
    bar.Parent = row
    bar.Position = UDim2.fromOffset(0, 0)
    bar.Size = UDim2.fromOffset(6, 38)
    bar.BackgroundColor3 = Color3.fromRGB(70, 140, 255)
    bar.BorderSizePixel = 0
    bar.ZIndex = 4
