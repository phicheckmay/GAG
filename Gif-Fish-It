local DefaultConfig = {
    ["Account Main"] = {"AlfredShopOfficial"},
    ["PetName"] = {"Megalodon","Robot Kraken","Worm Fish","Ghost Shark"},
    ["GiftDelay"] = 5,
    ["TeleportDelay"] = 0.2,
