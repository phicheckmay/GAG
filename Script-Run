end
end)

----------------------------------------------------------
-- üîÅ B7 LOOP
----------------------------------------------------------

task.spawn(function()
    while task.wait(getgenv().CYCLE_DELAY) do

        print("======== üîÅ B·∫ÆT ƒê·∫¶U =========")

        DigAll_NotInKeepList()

        for _,seed in ipairs(getgenv().SEED_PLANT_LIST) do
            while PlantOne(seed) do task.wait(.2) end
        end

        print("======== üîÅ K·∫æT TH√öC =========")
    end
end)
