local Players = game:GetService("Players")
local LP = Players.LocalPlayer

-- T·∫°o ScreenGui
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "FullBlackUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true

-- N·ªÅn ƒëen full m√†n h√¨nh
local bg = Instance.new("Frame", gui)
bg.BackgroundColor3 = Color3.new(0,0,0)
bg.Size = UDim2.new(1,0,1,0)

-- Hi·ªÉn th·ªã t√™n player
local nameLabel = Instance.new("TextLabel", bg)
nameLabel.Size = UDim2.new(1,0,0,70)
nameLabel.BackgroundTransparency = 1
nameLabel.Font = Enum.Font.GothamBold
nameLabel.TextScaled = true
nameLabel.TextColor3 = Color3.fromRGB(0,255,100)
nameLabel.Text = "üë§ PLAYER: " .. LP.Name

-- Khung log
local logFrame = Instance.new("ScrollingFrame", bg)
logFrame.Size = UDim2.new(1, -40, 1, -100)
logFrame.Position = UDim2.new(0, 20, 0, 80)
logFrame.CanvasSize = UDim2.new(0,0,0,0)
logFrame.ScrollBarThickness = 6
logFrame.BackgroundTransparency = 1

local UIList = Instance.new("UIListLayout", logFrame)
UIList.SortOrder = Enum.SortOrder.LayoutOrder
UIList.Padding = UDim.new(0,5)

-- H√†m log
local MAX_LOGS = 100  -- gi·ªØ 100 d√≤ng g·∫ßn nh·∫•t

local function Log(msg)
    -- T·∫°o d√≤ng log m·ªõi
    local lbl = Instance.new("TextLabel", logFrame)
    lbl.BackgroundTransparency = 1
    lbl.Font = Enum.Font.Code
    lbl.TextSize = 20
    lbl.TextColor3 = Color3.fromRGB(255,255,255)
    lbl.TextXAlignment = Enum.TextXAlignment.Left
    lbl.Size = UDim2.new(1, -10, 0, 22)
    lbl.Text = "[" .. os.date("%H:%M:%S") .. "] " .. tostring(msg)

    task.wait()

    -- ‚≠ê GI·ªöI H·∫†N 100 D√íNG LOG ‚≠ê
    if #logFrame:GetChildren() > MAX_LOGS + 1 then  -- +1 v√¨ UIListLayout c≈©ng l√† 1 child
        for _, child in ipairs(logFrame:GetChildren()) do
            if child:IsA("TextLabel") then
                child:Destroy()
                break
            end
        end
    end

    -- c·∫≠p nh·∫≠t ScrollFrame
    logFrame.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y + 20)
    logFrame.CanvasPosition = Vector2.new(
        0,
        math.max(0, UIList.AbsoluteContentSize.Y)
    )
end



-- Hook print ‚Üí t·ª± log
local oldPrint = print
print = function(...)
    oldPrint(...)
    Log(table.concat({...}, " "))
end

print("üîµ UI Loaded ‚Äì Full Black Mode")
print("üë§ Player:", LP.Name)
print("üìå Load Config xong")

